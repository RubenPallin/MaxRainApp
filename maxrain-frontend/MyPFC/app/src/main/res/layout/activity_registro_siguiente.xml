<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterSiguiente">



    <TextView
        android:id="@+id/textContraseña"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contraseña"
        android:textSize="16dp"
        android:textColor="@color/black"
        android:layout_marginTop="15dp"
        android:layout_marginRight="250dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <EditText
        android:id="@+id/sign_up_edittext_contraseña"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_editext"
        android:ems="10"
        android:fontFamily="sans-serif"
        android:hint="Contraseña"
        android:inputType="textPassword"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="@+id/textContraseña"
        app:layout_constraintTop_toBottomOf="@+id/textContraseña" />


    <TextView
        android:id="@+id/textRepetirContraseña"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Repite la contraseña"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="@+id/textContraseña"
        app:layout_constraintTop_toBottomOf="@+id/sign_up_edittext_contraseña" />

    <EditText
        android:id="@+id/sign_up_edittext_repetir_contraseña"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_editext"
        android:ems="10"
        android:fontFamily="sans-serif"
        android:layout_marginTop="5dp"
        android:hint="Contraseña"
        android:inputType="textPassword"
        app:layout_constraintStart_toStartOf="@+id/textContraseña"
        app:layout_constraintTop_toBottomOf="@+id/textRepetirContraseña" />

    <Button
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_button_back"
        android:text="Completar registro"
        android:layout_marginBottom="55dp"
        android:layout_marginRight="20dp"
        android:textColor="@color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>



</androidx.constraintlayout.widget.ConstraintLayout>