<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AjustesTema">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_ajustes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/maxcolor"
        app:title="Ajustes"
        app:titleTextColor="@android:color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <ImageView
        android:id="@+id/rueda_config"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/configuracion"
        android:layout_marginTop="90dp"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_ajustes"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <Switch
        android:id="@+id/modo_oscuro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Modo oscuro"
        android:textColor="@color/black"
        android:textSize="17dp"
        app:layout_constraintTop_toBottomOf="@+id/rueda_config"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="53dp" />

    <android.widget.Button
        android:id="@+id/eliminar_cuenta_boton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="80dp"
        android:background="@android:color/transparent"
        android:text="Delete Account"
        android:textColor="@color/red"
        app:layout_constraintTop_toBottomOf="@id/modo_oscuro"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
         />

</androidx.constraintlayout.widget.ConstraintLayout>