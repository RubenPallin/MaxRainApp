<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".ArticulosViewHolder"
    android:padding="12dp"
    android:background="@drawable/another_celda"
    >

    <ImageView
        android:id="@+id/image_subfamilia"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:src="@drawable/imagen" />

    <TextView
        android:id="@+id/textArticulo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Nombre del ArtÃ­culo"
        android:textSize="22dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/image_subfamilia"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/precioArticulo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Precio"
        android:textSize="20dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="17dp"
        app:layout_constraintTop_toBottomOf="@id/textArticulo"
        app:layout_constraintStart_toEndOf="@id/image_subfamilia"
        app:layout_constraintEnd_toEndOf="parent"
/>

</androidx.constraintlayout.widget.ConstraintLayout>